<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_50"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/login_logo"
                android:layout_width="@dimen/dp_107"
                android:layout_height="@dimen/dp_30"/>

            <TextView
                android:id="@+id/login_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="用户登录"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>

        <jh.zkj.com.yf.Mview.slidingtab.SlidingTabLayout
            android:id="@+id/login_sliding_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@color/white"
            app:tl_indicator_color="@color/c_6fb1fc"
            app:tl_indicator_height="1.5dp"
            app:tl_indicator_width_equal_title="true"
            app:tl_tab_space_equal="true"
            app:tl_textSelectColor="@color/c_6fb1fc"
            app:tl_textUnselectColor="@color/c_333333"
            app:tl_textsize="@dimen/sp_14"
            app:tl_indicator_width="@dimen/dp_40"
            app:tl_underline_color="@color/white"
            app:tl_underline_height="1dp" />

        <View
            android:layout_marginLeft="@dimen/dp_59"
            android:layout_marginRight="@dimen/dp_55"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/c_f2f2f2" />

        <android.support.v4.view.ViewPager
            android:layout_marginTop="@dimen/dp_40"
            android:id="@+id/login_viewpager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_230" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:id="@+id/login_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_19"
                android:text="忘记密码"
                android:textColor="@color/c_a6a6a6"
                android:textSize="@dimen/sp_12" />


            <TextView
                android:id="@+id/login_enterprise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:includeFontPadding="false"
                android:paddingRight="@dimen/dp_20"
                android:paddingTop="@dimen/dp_19"
                android:text="加入企业"
                android:textColor="@color/c_6fb1fc"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_40"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/company_login"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="企业登录"
                android:textColor="@color/c_f5a623"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_4"
                android:background="@mipmap/right_lab_yellow"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_12" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>