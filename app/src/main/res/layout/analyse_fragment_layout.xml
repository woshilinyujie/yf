<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <jh.zkj.com.yf.Mview.TitleLayout
        android:id="@+id/phone_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/white"
        app:centerText="经营分析"
        app:centerTextColor="@color/c_333333"
        app:centerTextSize="@dimen/sp_17" />




    <RelativeLayout
        android:layout_below="@id/phone_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/analyse_shop_rl"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:orientation="vertical">

            <ImageView
                android:background="@mipmap/shop"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64" />

            <TextView
                android:layout_marginTop="@dimen/dp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="门店经营"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/analyse_shop_man_rl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:orientation="vertical">

            <ImageView
                android:background="@mipmap/shop_man"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64" />

            <TextView
                android:layout_marginTop="@dimen/dp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="门店经营"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/analyse_sales_rl"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:orientation="vertical">

            <ImageView
                android:background="@mipmap/sales_analyse"
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64" />

            <TextView
                android:layout_marginTop="@dimen/dp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="门店经营"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>


    </RelativeLayout>
    <View
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toTopOf="@+id/home_activity_view"
        android:background="@drawable/shape_change_color_fafafa"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"/>
</RelativeLayout>