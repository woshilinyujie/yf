<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_30"
            android:paddingBottom="@dimen/dp_30"
            android:background="@drawable/shape_radius_8_ffffff">

            <TextView
                android:id="@+id/order_cancel_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_030303"
                android:text="确定要取消订单：吗？"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_20">

                <EditText
                    android:id="@+id/order_cancel_remark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLength="50"
                    android:padding="@dimen/dp_10"
                    android:gravity="top"
                    android:textColor="@color/c_333333"
                    android:textCursorDrawable="@null"
                    android:background="@color/c_f6f7fb"
                    android:includeFontPadding="false"/>

                <TextView
                    android:id="@+id/order_cancel_remark_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/50"
                    android:textColor="@color/c_cccccc"
                    android:layout_marginBottom="@dimen/dp_6"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:includeFontPadding="false"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/order_cancel_success"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:includeFontPadding="false"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_24"
                android:background="@drawable/shape_radius_4_6fb1fc"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/order_cancel_close"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:src="@mipmap/close_popup"
            android:layout_marginTop="@dimen/dp_30"/>
    </LinearLayout>
</RelativeLayout>