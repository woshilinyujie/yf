<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <jh.zkj.com.yf.Mview.TitleLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/white"
        app:centerText="加入企业"
        app:centerTextColor="@color/c_333333"
        app:centerTextSize="@dimen/sp_17"
        app:leftImageBg="@mipmap/back_arrow"
        app:leftImageHeightSize="@dimen/dp_20"
        app:leftImageWidthSize="@dimen/dp_12"
        app:leftMargin="@dimen/dp_16" />
    <TextView
        android:textColor="@color/c_333333"
        android:textSize="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_60"
        android:text="请输入手机号，加入企业"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_30"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="+86"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_34"
            android:background="@color/c_f2f2f2" />

        <EditText
            android:id="@+id/register_phone_et"
            android:textCursorDrawable="@null"
            android:maxLength="11"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_49"
            android:background="@null"
            android:hint="手机号"
            android:textColor="@color/c_333333"
            android:textColorHint="@color/c_d9d9d9"
            android:textSize="@dimen/sp_14" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/c_f2f2f2" />
    </RelativeLayout>


    <RelativeLayout
        android:paddingRight="@dimen/dp_30"
        android:paddingLeft="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">


        <EditText
            android:id="@+id/register_code_et"
            android:textCursorDrawable="@null"
            android:maxLength="6"
            android:inputType="number"
            android:layout_marginRight="@dimen/dp_120"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="输入验证码"
            android:textColor="@color/c_333333"
            android:textColorHint="@color/c_d9d9d9"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/register_send_code"
            android:gravity="center_vertical"
            android:text="获取验证码"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_6fb1fc"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/c_f2f2f2" />
    </RelativeLayout>
    <Button
        android:id="@+id/register_next"
        android:layout_marginTop="@dimen/dp_30"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/sp_14"
        android:text="下一步"
        android:background="@drawable/shape_radius_4_e6e6e6"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44" />
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/register_checkbox_iv"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:background="@drawable/check_box_background_selector_terms"
            android:button="@null"
            android:checked="true" />

        <TextView
            android:layout_marginLeft="@dimen/dp_4"
            android:text="已阅读并同意"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_a6a6a6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/register_negotiate"
            android:layout_marginLeft="@dimen/dp_4"
            android:text="《骏杭ERP用户注册协议》"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/c_6fb1fc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>