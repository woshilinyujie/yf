<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/c_f6f7fb"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_15"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/retail_receivable_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="收银方式"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/retail_receivable_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/retail_receivable_type_text"
                android:hint="请选择收营方式"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_38"
                android:textColor="@color/c_333333"
                android:textColorHint="@color/c_d9d9d9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:ellipsize="end"
                android:singleLine="true"
                android:lines="1"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/dp_16"/>

            <TextView
                android:id="@+id/retail_receivable_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清空"
                android:textColor="@color/c_6fb1fc"
                android:textSize="@dimen/sp_14"
                android:layout_marginRight="@dimen/dp_16"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/c_f6f7fb"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_15"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/retail_receivable_money_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="收银金额"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <EditText
                android:id="@+id/retail_receivable_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/retail_receivable_money_text"
                android:hint="请输入金额"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_38"
                android:textColor="@color/c_333333"
                android:textColorHint="@color/c_d9d9d9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:ellipsize="end"
                android:singleLine="true"
                android:lines="1"
                app:layout_constraintRight_toRightOf="@id/retail_receivable_left"
                android:layout_marginRight="@dimen/dp_16"/>

            <TextView
                android:id="@+id/retail_receivable_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14"
                android:layout_marginRight="@dimen/dp_16"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/c_f6f7fb"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/c_f6f7fb"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:paddingTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_15"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/retail_receivable_ps_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="备注"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toTopOf="parent"/>

            <EditText
                android:id="@+id/retail_receivable_ps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/retail_receivable_ps_text"
                android:hint="请输入备注"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_38"
                android:textColor="@color/c_a6a6a6"
                android:textColorHint="@color/c_d9d9d9"
                app:layout_constraintTop_toTopOf="parent"/>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/retail_receivable_new_commodity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <ImageView
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    android:src="@mipmap/add_small"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新增收银方式"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_333333"
                    android:layout_marginLeft="@dimen/dp_6"/>

            </LinearLayout>


        </android.support.constraint.ConstraintLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>