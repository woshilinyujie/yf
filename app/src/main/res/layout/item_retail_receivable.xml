<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/white">

        <TextView
            android:id="@+id/retail_receivable_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_14"
            android:text="收款方式1"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_centerVertical="true"/>


        <TextView
            android:id="@+id/retail_receivable_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_14"
            android:minEms="4"
            android:maxEms="4"
            android:text="现金"
            android:layout_marginLeft="@dimen/dp_29"
            android:layout_toRightOf="@id/retail_receivable_mode"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/retail_receivable_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_14"
            android:text="xx.xx"
            android:layout_marginRight="@dimen/dp_32"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_14"
            android:text="元"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/c_f6f7fb"/>




    <android.support.constraint.ConstraintLayout
        android:id="@+id/retail_receivable_remake_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:paddingTop="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_15"
        android:paddingRight="@dimen/dp_16"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/retail_receivable_ps_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="备注"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_14"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/retail_receivable_ps"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/retail_receivable_ps_text"
            android:hint="请输入备注"
            android:background="@null"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_38"
            android:textColor="@color/c_a6a6a6"
            android:textColorHint="@color/c_d9d9d9"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>





