<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <View
        android:id="@+id/ins_order_list_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        android:background="@color/c_f6f7fb"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_12"
        android:background="@drawable/shape_radius_8_ffffff"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ins_order_list_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收款单号"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_333333"
                android:includeFontPadding="false"/>

            <TextView
                android:id="@+id/ins_order_list_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未收款"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_6fb1fc"
                android:includeFontPadding="false"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/ins_order_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="荣耀rx1 经典旗舰版-白色eeee33r3rr3www3ww.."
            android:layout_marginTop="@dimen/dp_12"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_a6a6a6"
            android:layout_marginRight="@dimen/dp_93"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:includeFontPadding="false"/>

        <TextView
            android:id="@+id/ins_order_list_mei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="IMEI/识别号：W1242342342"
            android:textColor="@color/c_a6a6a6"
            android:textSize="@dimen/sp_14"
            android:includeFontPadding="false"/>

        <TextView
            android:id="@+id/ins_order_list_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="付款时间：2018-12-23 00:21:12"
            android:textColor="@color/c_a6a6a6"
            android:textSize="@dimen/sp_14"
            android:includeFontPadding="false"/>

        <TextView
            android:id="@+id/ins_order_list_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2128.00元"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/c_ff6600"
            android:includeFontPadding="false"
            android:gravity="right"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/c_f6f7fb"
            android:layout_marginTop="@dimen/dp_10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginTop="@dimen/dp_12">

            <TextView
                android:id="@+id/ins_order_list_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/c_999999"
                android:includeFontPadding="false"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:paddingRight="@dimen/dp_26"
                android:paddingLeft="@dimen/dp_26"
                android:background="@drawable/shape_stroke_999999_radius_30"
                android:gravity="center"/>

            <TextView
                android:id="@+id/ins_order_list_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即付款"
                android:minWidth="@dimen/dp_80"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/c_4987ff"
                android:includeFontPadding="false"
                android:paddingTop="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_4"
                android:background="@drawable/shape_stroke_4987ff_radius_30"
                android:layout_marginLeft="@dimen/dp_8"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/ins_order_list_no_more"
        android:gravity="center"
        android:text="没有更多了"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/c_333333"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"/>

</LinearLayout>