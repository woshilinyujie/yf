<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商品信息"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_a6a6a6"
                android:paddingBottom="@dimen/dp_6"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="6dp"
                android:background="@color/c_f6f7fb"/>

            <TextView
                android:id="@+id/retail_order_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清空"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="@dimen/dp_16"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_6fb1fc"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_15"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/retail_order_commodity_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="商品串号"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <EditText
                android:id="@+id/retail_order_commodity_phone_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/retail_order_commodity_phone"
                android:hint="请输入串码"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_38"
                android:textColor="@color/c_333333"
                android:textColorHint="@color/c_d9d9d9"
                android:inputType="number"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/retail_order_price_scan"
                android:lines="1"
                android:ellipsize="end"
                android:singleLine="true"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/dp_16"/>

            <ImageView
                android:id="@+id/retail_order_price_scan"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/scan_blue"
                android:layout_marginRight="@dimen/dp_16"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/c_f6f7fb"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_15"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/retail_order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="商品名称"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <EditText
                android:id="@+id/retail_order_name_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/retail_order_name"
                android:hint="请输入商品名称"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_38"
                android:textColor="@color/c_333333"
                android:textColorHint="@color/c_d9d9d9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:ellipsize="end"
                android:singleLine="true"
                android:lines="1"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/dp_16"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/c_f6f7fb"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_15"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/retail_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="商品单价"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <EditText
                android:id="@+id/retail_order_price_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/retail_order_price"
                android:hint="请输入商品单价"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_38"
                android:textColor="@color/c_333333"
                android:textColorHint="@color/c_d9d9d9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:ellipsize="end"
                android:singleLine="true"
                android:lines="1"
                app:layout_constraintRight_toRightOf="@id/retail_order_price_left"
                android:layout_marginRight="@dimen/dp_16"/>

            <TextView
                android:id="@+id/retail_order_price_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14"
                android:layout_marginRight="@dimen/dp_16"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/c_f6f7fb"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_15"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/retail_order_commodity_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="商品数量"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/retail_order_commodity_num_reduce"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:scaleType="fitXY"
                android:src="@mipmap/reduce"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/retail_order_commodity_num"
                android:layout_marginLeft="@dimen/dp_38"/>

            <EditText
                android:id="@+id/retail_order_commodity_num_et"
                android:layout_width="@dimen/dp_110"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/retail_order_commodity_num_reduce"
                android:text="1"
                android:gravity="center"
                android:background="@drawable/shape_solid_ffffff_stroke_d9d9d9_radius_2"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_8"
                android:inputType="number"
                android:textColor="@color/c_333333"
                android:textColorHint="@color/c_d9d9d9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/retail_order_commodity_num_add"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:scaleType="fitXY"
                android:src="@mipmap/add"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/retail_order_commodity_num_et"
                android:layout_marginLeft="@dimen/dp_8"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/c_f6f7fb"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_15"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/retail_order_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="总金额"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/retail_order_total_price_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/retail_order_total_price"
                android:hint="请输入备注"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_38"
                android:textColor="@color/c_a6a6a6"
                android:textColorHint="@color/c_d9d9d9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:ellipsize="end"
                android:singleLine="true"
                android:lines="1"
                app:layout_constraintRight_toRightOf="@id/retail_order_total_price_left"
                android:layout_marginRight="@dimen/dp_16"/>


            <TextView
                android:id="@+id/retail_order_total_price_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14"
                android:layout_marginRight="@dimen/dp_16"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/c_f6f7fb"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:paddingTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_15"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/retail_order_ps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="备注"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toTopOf="parent"/>

            <EditText
                android:id="@+id/retail_order_ps_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/retail_order_ps"
                android:hint="请输入备注"
                android:background="@null"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_38"
                android:textColor="@color/c_a6a6a6"
                android:textColorHint="@color/c_d9d9d9"
                app:layout_constraintTop_toTopOf="parent"/>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/retail_order_new_commodity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <ImageView
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    android:src="@mipmap/add_small"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新增商品"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_333333"
                    android:layout_marginLeft="@dimen/dp_6"/>

            </LinearLayout>
            

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>