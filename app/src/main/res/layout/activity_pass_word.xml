<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <jh.zkj.com.yf.Mview.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white"
        app:centerText="设置密码"
        app:centerTextColor="@color/c_333333"
        app:centerTextSize="@dimen/sp_17"
        app:leftImageBg="@mipmap/back_arrow"
        app:leftImageHeightSize="@dimen/dp_20"
        app:leftImageWidthSize="@dimen/dp_12"
        app:leftMargin="@dimen/dp_16" />

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_50"
        android:paddingRight="@dimen/dp_30"
        android:paddingLeft="@dimen/dp_30"
    android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">


        <EditText
            android:id="@+id/password_one_et"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="20"
            android:textCursorDrawable="@null"
            android:inputType="textPassword"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="设置登录密码"
            android:textColor="@color/c_333333"
            android:textColorHint="@color/c_d9d9d9"
            android:textSize="@dimen/sp_14" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/c_f2f2f2" />
    </RelativeLayout>
    <RelativeLayout
        android:paddingRight="@dimen/dp_30"
        android:paddingLeft="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">


        <EditText
            android:id="@+id/password_two_et"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="20"
            android:textCursorDrawable="@null"
            android:inputType="textPassword"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="确认登录密码"
            android:textColor="@color/c_333333"
            android:textColorHint="@color/c_d9d9d9"
            android:textSize="@dimen/sp_14" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/c_f2f2f2" />
    </RelativeLayout>

    <Button
        android:id="@+id/password_next"
        android:layout_marginTop="@dimen/dp_50"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/sp_14"
        android:text="下一步"
        android:background="@drawable/shape_radius_4_e6e6e6"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44" />

</LinearLayout>