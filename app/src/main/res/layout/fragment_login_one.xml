<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/company_white" />

                <EditText
                    android:inputType="number"
                    android:maxLength="20"
                    android:textCursorDrawable="@null"
                    android:id="@+id/login_company_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:includeFontPadding="false"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/c_d9d9d9"
                    android:hint="公司代码"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/dp_7"
                    android:textSize="@dimen/sp_14"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/c_f2f2f2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:background="@mipmap/yonghu"
                    android:layout_gravity="center_vertical"/>

                <EditText
                    android:textCursorDrawable="@null"
                    android:id="@+id/login_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:includeFontPadding="false"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/c_d9d9d9"
                    android:hint="登录名/手机号"
                    android:singleLine="true"

                    android:maxLength="11"
                    android:paddingLeft="@dimen/dp_7"
                    android:textSize="@dimen/sp_14"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/c_f2f2f2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:background="@mipmap/lock"
                    android:layout_gravity="center_vertical"/>

                <EditText
                    android:maxLength="20"
                    android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:textCursorDrawable="@null"
                    android:id="@+id/login_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:includeFontPadding="false"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/c_d9d9d9"
                    android:hint="登录密码"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/dp_7"
                    android:textSize="@dimen/sp_14"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/c_f2f2f2"/>

        </LinearLayout>
        <TextView
            android:id="@+id/login_one_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/shape_solid_e6e6e6_radius_4"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="登录"
            android:textColor="@color/white" />

    </LinearLayout>



</RelativeLayout>