<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_radius_8_ffffff"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="筛选"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/c_333333"
                android:layout_marginTop="@dimen/dp_20"
                android:includeFontPadding="false"
                android:gravity="center"/>
            <!-- 公司 -->
            <RelativeLayout
                android:id="@+id/stock_filter_company"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginTop="@dimen/dp_43"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/dp_16"
                android:paddingLeft="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="公司"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_333333"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:hint="请选择"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/c_333333"
                        android:layout_marginRight="@dimen/dp_4"/>

                    <ImageView
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_12"
                        android:src="@mipmap/right_more_arrow"/>

                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:background="@color/c_f6f7fb"/>

            <!-- 仓库 -->
            <RelativeLayout
                android:id="@+id/stock_filter_warehouse"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/dp_16"
                android:paddingLeft="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="仓库"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_333333"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:hint="请选择"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/c_333333"
                        android:layout_marginRight="@dimen/dp_4"/>

                    <ImageView
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_12"
                        android:src="@mipmap/right_more_arrow"/>

                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:background="@color/c_f6f7fb"/>

            <!-- 商品分类 -->
            <RelativeLayout
                android:id="@+id/stock_filter_classification"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/dp_16"
                android:paddingLeft="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="商品分类"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_333333"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:hint="请选择"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/c_333333"
                        android:layout_marginRight="@dimen/dp_4"/>

                    <ImageView
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_12"
                        android:src="@mipmap/right_more_arrow"/>

                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:background="@color/c_f6f7fb"/>

            <!-- 品牌 -->

            <RelativeLayout
                android:id="@+id/stock_filter_brand"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/dp_16"
                android:paddingLeft="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="品牌"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_333333"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:hint="请选择"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/c_333333"
                        android:layout_marginRight="@dimen/dp_4"/>

                    <ImageView
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_12"
                        android:src="@mipmap/right_more_arrow"/>

                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:background="@color/c_f6f7fb"/>


            <!-- 型号 -->
            <RelativeLayout
                android:id="@+id/stock_filter_model"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/dp_16"
                android:paddingLeft="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="型号"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_333333"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:hint="请选择"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/c_333333"
                        android:layout_marginRight="@dimen/dp_4"/>

                    <ImageView
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_12"
                        android:src="@mipmap/right_more_arrow"/>

                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:background="@color/c_f6f7fb"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_31"
                android:background="@color/c_f6f7fb"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/stock_filter_reset"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:text="重置"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/c_333333"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_18"
                    android:paddingBottom="@dimen/dp_18"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/stock_filter_confirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:text="确定"
                    android:textSize="@dimen/sp_14"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_18"
                    android:paddingBottom="@dimen/dp_18"
                    android:background="@drawable/shape_radius_right_bottom_8_6fb1fc"/>

            </LinearLayout>

        </LinearLayout>
        
        <ImageView
            android:id="@+id/stock_filter_close"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_30"
            android:src="@mipmap/close_popup"/>
        
    </LinearLayout>

</RelativeLayout>