<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/child_warehouse_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="@color/c_e6f0fc">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_12"
            android:includeFontPadding="false"
            android:text="仓库"
            android:textColor="@color/c_666666"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_16"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_12"
            android:includeFontPadding="false"
            android:text="数量"
            android:textColor="@color/c_666666"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_26"/>

    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/child_warehouse_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_16"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/child_warehouse_title_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="Apple iPhone6S 128G 白色"
            android:textColor="@color/c_333333"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/child_warehouse_arrow"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_12"
            android:src="@mipmap/right_more_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_16"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="43"
            android:textColor="@color/c_333333"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_toLeftOf="@id/child_warehouse_arrow"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@id/child_warehouse_content_layout"/>


</android.support.constraint.ConstraintLayout>