<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <include
            android:id="@+id/retail_receivable_top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/item_retail_list"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/retail_receivable_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/retail_receivable_top_layout"
            app:layout_constraintBottom_toTopOf="@id/retail_receivable_success"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/retail_receivable_success"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:text="确认收银"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:background="@color/c_6fb1fc"/>

</android.support.constraint.ConstraintLayout>