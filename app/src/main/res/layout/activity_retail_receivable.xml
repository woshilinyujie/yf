<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/retail_receivable_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <jh.zkj.com.yf.Mview.TitleLayout
            android:id="@+id/retail_receivable_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            app:leftImageBg="@mipmap/back_arrow"
            app:leftImageWidthSize="@dimen/dp_12"
            app:leftImageHeightSize="@dimen/dp_20"
            app:leftMargin="@dimen/dp_16"
            app:rightMargin="@dimen/dp_16"
            app:centerText="零售收款"
            app:centerTextSize="@dimen/sp_16"
            app:rightText="确认"
            app:rightTextSize="@dimen/sp_14"
            app:rightTextColor="@color/c_666666"
            android:background="@color/white"/>

        <LinearLayout
            android:id="@+id/retail_receivable_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/retail_receivable_title">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16">

                        <TextView
                            android:id="@+id/retail_receivable_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单编号"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/c_a6a6a6"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:includeFontPadding="false"
                            android:layout_marginTop="@dimen/dp_9"/>

                        <TextView
                            android:id="@+id/retail_receivable_order_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未收款"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/c_6fb1fc"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:includeFontPadding="false"
                            android:layout_marginTop="@dimen/dp_9"/>

                        <View
                            android:id="@+id/retail_receivable_line"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:background="@color/c_f6f7fb"
                            app:layout_constraintTop_toBottomOf="@id/retail_receivable_order"
                            android:layout_marginTop="@dimen/dp_9"/>

                        <TextView
                            android:id="@+id/retail_receivable_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  "
                            app:layout_constraintTop_toTopOf="@id/retail_receivable_line"
                            android:layout_marginTop="@dimen/dp_10"
                            android:textSize="@dimen/dp_14"
                            android:includeFontPadding="false"
                            android:maxWidth="@dimen/dp_200"
                            android:textColor="@color/c_333333"/>

                        <TextView
                            android:id="@+id/retail_receivable_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  "
                            app:layout_constraintTop_toTopOf="@id/retail_receivable_line"
                            app:layout_constraintLeft_toRightOf="@id/retail_receivable_name"
                            android:layout_marginTop="@dimen/dp_11"
                            android:textSize="@dimen/dp_12"
                            android:textColor="@color/c_333333"
                            android:includeFontPadding="false"
                            android:layout_marginLeft="@dimen/dp_8"/>

                        <TextView
                            android:id="@+id/retail_receivable_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  "
                            app:layout_constraintTop_toTopOf="@id/retail_receivable_line"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginTop="@dimen/dp_15"
                            android:textSize="@dimen/dp_12"
                            android:textColor="@color/c_333333"
                            android:includeFontPadding="false"
                            android:layout_marginLeft="@dimen/dp_36"/>

                        <TextView
                            android:id="@+id/retail_receivable_order_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="  "
                            app:layout_constraintTop_toBottomOf="@id/retail_receivable_name"
                            android:layout_marginTop="@dimen/dp_10"
                            android:textSize="@dimen/dp_12"
                            android:textColor="@color/c_a6a6a6"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginRight="@dimen/dp_93"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:includeFontPadding="false"/>

                        <TextView
                            android:id="@+id/retail_receivable_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="收款人"
                            android:textColor="@color/c_a6a6a6"
                            android:textSize="@dimen/dp_12"
                            android:includeFontPadding="false"
                            app:layout_constraintTop_toBottomOf="@id/retail_receivable_order_title"/>

                        <TextView
                            android:id="@+id/retail_receivable_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="收款时间："
                            android:textColor="@color/c_a6a6a6"
                            android:textSize="@dimen/dp_12"
                            android:includeFontPadding="false"
                            app:layout_constraintTop_toBottomOf="@id/retail_receivable_user_name"/>

                        <TextView
                            android:id="@+id/retail_receivable_money_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="元"
                            android:includeFontPadding="false"
                            android:textSize="@dimen/dp_16"
                            android:textColor="@color/c_ff6600"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="@id/retail_receivable_date"/>

                </android.support.constraint.ConstraintLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="收款信息"
                    android:textColor="@color/c_a6a6a6"
                    android:background="@color/c_f6f7fb"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:layout_marginTop="@dimen/dp_12"
                    app:layout_constraintTop_toBottomOf="@id/retail_receivable_money_bottom"/>

                <LinearLayout
                    android:id="@+id/retail_receivable_harvest_mode_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/dp_13"
                    android:paddingTop="@dimen/dp_13"
                    android:background="@color/white">

                        <ImageView
                            android:id="@+id/retail_receivable_harvest_icon"
                            android:layout_width="@dimen/dp_18"
                            android:layout_height="@dimen/dp_18"
                            android:src="@mipmap/circle_add_blue"/>

                        <TextView
                            android:id="@+id/retail_receivable_harvest_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="添加收款方式"
                            android:textColor="@color/c_6fb1fc"
                            android:layout_marginLeft="@dimen/dp_8"/>

                </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/retail_receivable_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/retail_receivable_info_layout"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>