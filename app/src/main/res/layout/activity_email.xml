<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/c_f6f7fb"
    android:layout_height="match_parent"
    tools:context="jh.zkj.com.yf.Activity.My.EmailActivity">

    <jh.zkj.com.yf.Mview.TitleLayout
        android:id="@+id/phone_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/white"
        app:centerText="邮箱"
        app:centerTextColor="@color/c_333333"
        app:centerTextSize="@dimen/sp_17"
        app:leftImageBg="@mipmap/back_arrow"
        app:leftImageHeightSize="@dimen/dp_20"
        app:leftImageWidthSize="@dimen/dp_12"
        app:leftMargin="@dimen/dp_16" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_10">


        <EditText
            android:textCursorDrawable="@null"
            android:id="@+id/username_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:hint="请输入您的邮箱"
            android:maxEms="10"
            android:paddingLeft="@dimen/dp_16"
            android:textColor="@color/c_333333"
            android:textColorHint="@color/c_d9d9d9"
            android:textSize="@dimen/dp_14" />


        <ImageView
            android:id="@+id/username_delete"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@mipmap/system"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>


    <TextView
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_14"
        android:gravity="center"
        android:text="如果你更改了邮箱地址，你需要对邮箱地址重新验证。"
        android:textColor="@color/c_a6a6a6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/phone_save"
        android:textSize="@dimen/dp_14"
        android:text="确定"
        android:textColor="@color/white"
        android:background="@drawable/shape_radius_4_6fb1fc"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44" />
</LinearLayout>
