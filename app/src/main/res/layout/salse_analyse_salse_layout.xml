<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f6f7fb">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:orientation="horizontal">

                <View

                    android:layout_width="@dimen/dp_4"
                    android:layout_height="@dimen/dp_12"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:background="@color/c_6fb1fc" />

                <TextView
                    android:id="@+id/sales_sales_select_tv"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:text="品牌"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_13" />

                <ImageView
                    android:layout_marginLeft="@dimen/dp_4"
                    android:background="@mipmap/trigonometry_down"
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/dp_6"
                    android:layout_height="@dimen/dp_4" />


            </LinearLayout>


            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/sales_sales_pie_chart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_280"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_40" />


            <LinearLayout
                android:background="@drawable/shape_radius_4_e6f0fc_top"
                android:layout_marginLeft="@dimen/dp_26"
                android:layout_marginRight="@dimen/dp_26"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30">
                <TextView
                    android:gravity="center"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_12"
                    android:text="序号"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <View
                    android:background="#f6f7fb"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"/>
                <TextView
                    android:paddingLeft="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_12"
                    android:text="公司名称"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <View
                    android:background="#f6f7fb"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"/>
                <TextView
                    android:paddingLeft="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_12"
                    android:text="销量"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <View
                    android:background="#f6f7fb"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_12"
                    android:text="趋势"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />


            </LinearLayout>
            <jh.zkj.com.yf.Mview.MeasureListView
                android:dividerHeight="@dimen/dp_0"
                android:divider="@color/c_f6f7fb"
                android:layout_marginBottom="@dimen/dp_10"
                android:id="@+id/sales_sales_table_list"
                android:layout_marginRight="@dimen/dp_26"
                android:layout_marginLeft="@dimen/dp_26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>

</ScrollView>