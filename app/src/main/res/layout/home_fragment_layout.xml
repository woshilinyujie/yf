<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f6f7fb"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <android.support.constraint.ConstraintLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/home_fragment_scan"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_12"
                android:background="@mipmap/scan"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/home_fragment_severs"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@mipmap/severs"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/home_fragment_msg"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView

                android:id="@+id/home_fragment_msg"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@mipmap/msg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/home_fragment_search"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_32"
                android:layout_marginBottom="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@drawable/shape_radius_30_f2f2f2"
                android:gravity="center_vertical"
                android:hint="单据号收索"
                android:paddingLeft="@dimen/dp_35"
                android:textColor="@color/c_a6a6a6"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/home_fragment_scan"
                app:layout_constraintRight_toLeftOf="@+id/home_fragment_severs"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@mipmap/search"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/home_fragment_search"
                app:layout_constraintTop_toTopOf="parent" />


        </android.support.constraint.ConstraintLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="2px"
            android:background="#ffffff"
            android:paddingLeft="@dimen/dp_13"
            android:paddingRight="@dimen/dp_13">

            <View
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_14"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_radius_3_6fb1fc" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="常用菜单"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/home_fragment_common_menu_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="更多"
                android:textColor="@color/c_999999"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/home_fragment_common_menu_one"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/lingshouxiadan"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/home_fragment_common_menu_two"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/home_fragment_common_menu_one_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:text="零售下单"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/home_fragment_common_menu_one"
                app:layout_constraintRight_toRightOf="@id/home_fragment_common_menu_one"
                app:layout_constraintTop_toBottomOf="@id/home_fragment_common_menu_one" />

            <ImageView
                android:id="@+id/home_fragment_common_menu_two"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/lingshouchaxu"
                app:layout_constraintLeft_toRightOf="@id/home_fragment_common_menu_one"
                app:layout_constraintRight_toLeftOf="@id/home_fragment_common_menu_three"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/home_fragment_common_menu_two_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="零售查询"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_12"
                app:layout_constraintLeft_toLeftOf="@id/home_fragment_common_menu_two"
                app:layout_constraintRight_toRightOf="@id/home_fragment_common_menu_two"
                app:layout_constraintTop_toBottomOf="@id/home_fragment_common_menu_two" />

            <ImageView
                android:id="@+id/home_fragment_common_menu_three"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/baojiadan"
                app:layout_constraintLeft_toRightOf="@id/home_fragment_common_menu_two"
                app:layout_constraintRight_toLeftOf="@id/home_fragment_common_menu_four"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/home_fragment_common_menu_three_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="报价单查询"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_12"
                app:layout_constraintLeft_toLeftOf="@id/home_fragment_common_menu_three"
                app:layout_constraintRight_toRightOf="@id/home_fragment_common_menu_three"
                app:layout_constraintTop_toBottomOf="@id/home_fragment_common_menu_three" />

            <ImageView
                android:id="@+id/home_fragment_common_menu_four"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/kucunguanli"
                app:layout_constraintLeft_toRightOf="@id/home_fragment_common_menu_three"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/home_fragment_common_menu_four_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="库存查询"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_12"
                app:layout_constraintLeft_toLeftOf="@+id/home_fragment_common_menu_four"
                app:layout_constraintRight_toRightOf="@+id/home_fragment_common_menu_four"
                app:layout_constraintTop_toBottomOf="@+id/home_fragment_common_menu_four" />

        </android.support.constraint.ConstraintLayout>


        <RelativeLayout
            android:id="@+id/home_fragment_trumpet_more"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#ffffff">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/trumpet" />
            <ImageView
                android:layout_marginRight="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/right_lab"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_12" />

            <jh.zkj.com.yf.Mview.SwitchText
                android:maxEms="14"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:id="@+id/home_fragment_switch_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_35"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#ffffff"
            android:paddingLeft="@dimen/dp_13"
            android:paddingRight="@dimen/dp_13">

            <View
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_14"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_radius_3_6fb1fc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="待办事项"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>

        <!--<android.support.design.widget.TabLayout-->
            <!--android:background="#ffffff"-->
            <!--android:id="@+id/home_fragment_tab"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/dp_50"-->
            <!--app:tabGravity="center"-->
            <!--app:tabIndicatorColor="@color/c_6fb1fc"-->
            <!--app:tabMode="scrollable"-->
            <!--app:tabSelectedTextColor="@color/c_6fb1fc"-->
            <!--app:tabTextColor="@color/c_333333" />-->

        <jh.zkj.com.yf.Mview.slidingtab.SlidingTabLayout
            app:tl_tab_width="@dimen/dp_120"
            android:id="@+id/home_fragment_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            app:tl_indicator_color="@color/c_6fb1fc"
            app:tl_indicator_height="1.5dp"
            app:tl_indicator_width_equal_title="true"
            app:tl_tab_space_equal="true"
            app:tl_indicator_width="@dimen/dp_25"
            app:tl_textSelectColor="@color/c_6fb1fc"
            app:tl_textUnselectColor="@color/c_333333"
            app:tl_textsize="@dimen/sp_14"
            app:tl_underline_color="@color/c_f6f7fb"
            app:tl_underline_height="@dimen/dp_1"
            android:background="#ffffff"/>

        <jh.zkj.com.yf.Mview.MeasureViewpager
            android:background="#ffffff"
            android:id="@+id/home_fragment_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#ffffff"
            android:paddingLeft="@dimen/dp_13"
            android:paddingRight="@dimen/dp_16">

            <View
                android:layout_width="@dimen/dp_4"
                android:layout_height="@dimen/dp_14"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_radius_3_6fb1fc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="我的业绩"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14" />
            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="更多"
                android:textColor="@color/c_a6a6a6"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75">

            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/sp_32"
                android:text="34523"
                android:textColor="@color/c_657ff6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/dp_8"
                android:text="本月累计提成(元)"
                android:textColor="@color/c_a6a6a6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_30"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_marginLeft="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_14"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">


                <TextView
                    android:text="今日(元)"
                    android:textColor="@color/c_a6a6a6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    />
                <TextView
                    android:layout_marginTop="@dimen/dp_3"
                    android:text="1235.00"
                    android:textColor="@color/c_657ff6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    />
            </LinearLayout>
            <LinearLayout
                android:paddingBottom="@dimen/dp_14"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">


                <TextView
                    android:text="本周(元)"
                    android:textColor="@color/c_a6a6a6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    />
                <TextView
                    android:layout_marginTop="@dimen/dp_3"
                    android:text="1235.00"
                    android:textColor="@color/c_657ff6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_14"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">


                <TextView
                    android:text="本月(元)"
                    android:textColor="@color/c_a6a6a6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    />
                <TextView
                    android:layout_marginTop="@dimen/dp_3"
                    android:text="1235.00"
                    android:textColor="@color/c_657ff6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</ScrollView>