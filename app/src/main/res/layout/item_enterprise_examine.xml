<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_10"
        android:background="@color/c_f6f7fb"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_12">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/enterprise_examine_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张三"
                    android:textSize="@dimen/sp_14"
                    android:maxWidth="@dimen/dp_200"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:textColor="@color/c_333333"/>

                <TextView
                    android:id="@+id/enterprise_examine_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="156xxxxxxxx"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/c_333333"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="@dimen/dp_8"/>
            </LinearLayout>

            <TextView
                android:id="@+id/enterprise_examine_com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_a6a6a6"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/dp_10"
                android:text="申请加入：杭州骏航数码有限公司"/>

            <TextView
                android:id="@+id/enterprise_examine_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_a6a6a6"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/dp_10"
                android:text="申请时间：2018-11-10 12:12:34"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_14">

            <TextView
                android:id="@+id/enterprise_examine_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="已拒绝"
                android:layout_alignParentRight="true"
                android:textColor="@color/c_ff6600"/>

            <LinearLayout
                android:id="@+id/enterprise_examine_option_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_44"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/enterprise_examine_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拒绝"
                    android:includeFontPadding="false"
                    android:background="@drawable/shape_radius_30_stroke_ff6600"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/c_ff6600"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_18"
                    android:paddingLeft="@dimen/dp_18"
                    android:layout_marginRight="@dimen/dp_12"/>

                <TextView
                    android:id="@+id/enterprise_examine_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同意"
                    android:includeFontPadding="false"
                    android:background="@drawable/shape_radius_30_stroke_35d048"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/c_35d048"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_18"
                    android:paddingLeft="@dimen/dp_18"/>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>