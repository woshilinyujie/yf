<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_radius_8_ffffff"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/insurance_dialog_close"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_gravity="right"
            android:background="@mipmap/receivable_close"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22" />
        <ImageView
            android:id="@+id/insurance_dialog_iv"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_65"
            android:background="@mipmap/refund" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:text="退款失败"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/insurance_dialog_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_56"
            android:layout_marginRight="@dimen/dp_56"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_3"
            android:text="失败原因"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_14" />


        <Button

            android:layout_marginBottom="@dimen/dp_22"
            android:id="@+id/insurance_dialog_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:background="@drawable/shape_radius_8_4987ff"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />


    </LinearLayout>

</LinearLayout>