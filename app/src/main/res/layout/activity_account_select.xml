<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <jh.zkj.com.yf.Mview.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white"
        app:centerText="选择账户"
        app:centerTextColor="@color/c_333333"
        app:centerTextSize="@dimen/sp_17"
        app:leftImageBg="@mipmap/back_arrow"
        app:leftImageHeightSize="@dimen/dp_20"
        app:leftImageWidthSize="@dimen/dp_12"
        app:leftMargin="@dimen/dp_16" />

    <LinearLayout
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_190"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:background="@mipmap/private_account" />
        <TextView
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_16"
            android:textColor="@color/c_333333"
            android:text="个人账户"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_190"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:background="@mipmap/company_account" />
        <TextView
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_16"
            android:textColor="@color/c_333333"
            android:text="公司账户"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>