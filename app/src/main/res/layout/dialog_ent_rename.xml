<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_radius_12_fcfcfc"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_30"
        android:paddingTop="@dimen/dp_30"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/ent_password_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="设置名称"
            android:textColor="@color/c_030303"
            android:textSize="@dimen/sp_14"/>

        <EditText
            android:id="@+id/ent_rename_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:includeFontPadding="false"
            android:layout_marginTop="@dimen/dp_20"
            android:hint="请输入名称"
            android:textColor="@color/c_030303"
            android:textSize="@dimen/sp_14"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:inputType="textPassword"
            android:background="@drawable/shape_radius_4_f6f7fb"/>

        <TextView
            android:id="@+id/ent_rename_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_24"
            android:background="@drawable/shape_radius_4_6fb1fc"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30">

        <ImageView
            android:id="@+id/ent_rename_close"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:src="@mipmap/close_popup"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</LinearLayout>