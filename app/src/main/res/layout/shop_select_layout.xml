<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_22"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_16"
            android:text="快捷日期"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_37"
            android:layout_marginRight="@dimen/dp_16"
            android:orientation="horizontal">


            <Button
                android:id="@+id/shop_select_today"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@drawable/shape_radius_4_f6f7fb"
                android:text="今日"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14" />

            <Button
                android:id="@+id/shop_select_week"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@drawable/shape_radius_4_f6f7fb"
                android:text="本周"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14" />

            <Button
                android:id="@+id/shop_select_month"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_radius_4_f6f7fb"
                android:text="本月"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom= "@dimen/dp_15"
        android:paddingTop="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始日期"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_14" />
        
        <ImageView
            android:background="@mipmap/right_lab"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_12" />


        <TextView
            android:id="@+id/shop_select_begin"
            android:layout_marginRight="@dimen/dp_10"
            android:text=""
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_666666"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@color/c_f6f7fb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <RelativeLayout
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom= "@dimen/dp_15"
        android:paddingTop="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束日期"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:background="@mipmap/right_lab"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_12" />


        <TextView
            android:id="@+id/shop_select_end"
            android:layout_marginRight="@dimen/dp_10"
            android:text=""
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_666666"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@color/c_f6f7fb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <RelativeLayout
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom= "@dimen/dp_15"
        android:paddingTop="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品分类"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:background="@mipmap/right_lab"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_12" />


        <TextView
            android:id="@+id/shop_select_classified"
            android:layout_marginRight="@dimen/dp_10"
            android:text="请选择"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_666666"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@color/c_f6f7fb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <RelativeLayout
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom= "@dimen/dp_15"
        android:paddingTop="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品品牌"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:background="@mipmap/right_lab"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_12" />


        <TextView
            android:id="@+id/shop_select_brand"
            android:layout_marginRight="@dimen/dp_10"
            android:text="请选择"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_666666"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@color/c_f6f7fb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <RelativeLayout
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom= "@dimen/dp_15"
        android:paddingTop="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品型号"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:background="@mipmap/right_lab"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_12" />


        <TextView
            android:id="@+id/shop_select_model"
            android:layout_marginRight="@dimen/dp_10"
            android:text="请选择"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_666666"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom= "@dimen/dp_15"
        android:paddingTop="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单据类型"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:background="@mipmap/right_lab"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_12" />


        <TextView
            android:id="@+id/shop_select_type"
            android:layout_marginRight="@dimen/dp_10"
            android:text="全部"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_666666"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@color/c_f6f7fb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <View
        android:layout_marginTop="@dimen/dp_30"
        android:background="@color/c_f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

        <Button
            android:id="@+id/shop_select_replace"
            android:textColor="@color/c_333333"
            android:background="@color/white"
            android:textSize="@dimen/sp_14"
            android:text="重置"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/shop_select_sure"
            android:textColor="@color/white"
           android:background="@color/c_6fb1fc"
            android:textSize="@dimen/sp_14"
            android:text="确定"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />


    </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/shop_select_bg"
        android:background="#40000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>