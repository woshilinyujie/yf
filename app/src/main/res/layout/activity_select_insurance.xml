<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f6f7fb">

    <jh.zkj.com.yf.Mview.TitleLayout
        android:id="@+id/select_insurance_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white"
        app:centerText="选购保险"
        app:centerTextSize="@dimen/sp_16"
        app:leftImageBg="@mipmap/back_arrow"
        app:leftImageHeightSize="@dimen/dp_20"
        app:leftImageWidthSize="@dimen/dp_12"
        app:leftMargin="@dimen/dp_16"
        app:rightMargin="@dimen/dp_16"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/select_insurance_title"
        android:layout_above="@id/select_insurance_bottom_layout"
        android:layout_marginTop="@dimen/dp_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="请确认机型"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="请确认机型"
                        android:textColor="@color/c_4987ff"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginRight="@dimen/dp_10"/>

                    <ImageView
                        android:layout_width="@dimen/dp_5"
                        android:layout_height="@dimen/dp_14"
                        android:src="@mipmap/right_more_arrow"/>
                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_radius_8_ffffff"
                android:paddingBottom="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="品牌"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/sp_15"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="苹果"
                        android:textColor="@color/c_666666"
                        android:textSize="@dimen/sp_14"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="型号"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/sp_15"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="iphone8"
                        android:textColor="@color/c_666666"
                        android:textSize="@dimen/sp_14"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="商品名称"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/sp_15"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="mezupro2.0亮黑(UD版)"
                        android:textColor="@color/c_666666"
                        android:textSize="@dimen/sp_14"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>


            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/select_insurance_recycle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/select_insurance_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/select_insurance_select_img"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="#f00"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"/>

        <TextView
            android:id="@+id/select_insurance_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:includeFontPadding="false"
            android:text="结算下单"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:background="@color/c_4987ff"
            android:paddingLeft="@dimen/dp_36"
            android:paddingRight="@dimen/dp_36"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="合计： ￥0.00"
            android:layout_centerVertical="true"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_14"
            android:layout_toLeftOf="@id/select_insurance_btn"
            android:layout_marginRight="@dimen/dp_6"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="全选"
            android:layout_centerVertical="true"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/sp_14"
            android:layout_toRightOf="@id/select_insurance_select_img"
            android:layout_marginLeft="@dimen/dp_10"/>

    </RelativeLayout>

</RelativeLayout>