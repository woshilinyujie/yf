<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/c_f6f7fb"
    tools:context="jh.zkj.com.yf.Activity.My.UserNameActivity">


    <jh.zkj.com.yf.Mview.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:leftImageBg="@mipmap/back_arrow"
        app:leftImageWidthSize="@dimen/dp_12"
        app:leftImageHeightSize="@dimen/dp_20"
        app:leftMargin="@dimen/dp_16"
        app:centerTextSize="@dimen/sp_17"
        app:centerTextColor="@color/c_333333"
        app:centerText="用户名"
        android:background="@color/white"/>


    <android.support.constraint.ConstraintLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">


       <EditText
           android:id="@+id/username_name"
           android:maxEms="10"
           android:textColorHint="@color/c_333333"
           android:textColor="@color/c_333333"
           android:paddingLeft="@dimen/dp_16"
           android:hint="名字"
            android:textSize="@dimen/dp_14"
           android:background="#ffffff"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_44" />
        
        
        <ImageView
            android:id="@+id/username_delete"
            android:background="@mipmap/system"
            android:layout_marginRight="@dimen/dp_16"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14" />

    </android.support.constraint.ConstraintLayout>
    
    
    
    <Button
        android:id="@+id/username_save"
        android:textSize="@dimen/dp_14"
        android:text="保存"
        android:textColor="@color/white"
        android:background="@drawable/shape_radius_4_6fb1fc"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44" />




</LinearLayout>
