<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商品信息"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/c_a6a6a6"
                android:paddingBottom="@dimen/dp_6"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="6dp"
                android:background="@color/c_f6f7fb"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_15"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/order_info_details_commodity_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="商品序列号"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/order_info_details_commodity_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/order_info_details_commodity_phone_tv"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_38"
                android:textColor="@color/c_333333"
                android:includeFontPadding="false"
                android:gravity="right"
                android:lines="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginRight="@dimen/dp_16"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/c_f6f7fb"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_15"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/order_info_details_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="商品名称"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/order_info_details_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/order_info_details_name_tv"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_38"
                android:textColor="@color/c_333333"
                android:includeFontPadding="false"
                android:gravity="right"
                android:ellipsize="end"
                android:singleLine="true"
                android:lines="1"
                android:layout_marginRight="@dimen/dp_16"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/c_f6f7fb"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_15"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/order_info_details_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="商品单价"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/order_info_details_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/order_info_details_price_tv"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_38"
                android:textColor="@color/c_333333"
                android:includeFontPadding="false"
                android:gravity="right"
                android:ellipsize="end"
                android:singleLine="true"
                android:lines="1"
                android:layout_marginRight="@dimen/dp_16"
                app:layout_constraintRight_toRightOf="@id/order_info_details_price_left"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/order_info_details_price_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14"
                android:layout_marginRight="@dimen/dp_16"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/c_f6f7fb"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_15"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/order_info_details_commodity_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="商品数量"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/order_info_details_commodity_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/order_info_details_commodity_num_tv"
                android:text="1"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_38"
                android:inputType="number"
                android:textColor="@color/c_333333"
                android:includeFontPadding="false"
                android:gravity="right"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/dp_16"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/c_f6f7fb"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_15"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/order_info_details_total_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="总金额"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/order_info_details_total_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/order_info_details_total_price_tv"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_38"
                android:textColor="@color/c_333333"
                android:includeFontPadding="false"
                android:gravity="right"
                android:ellipsize="end"
                android:singleLine="true"
                android:lines="1"
                android:layout_marginRight="@dimen/dp_16"
                app:layout_constraintRight_toRightOf="@id/order_info_details_total_price_left"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


            <TextView
                android:id="@+id/order_info_details_total_price_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14"
                android:layout_marginRight="@dimen/dp_16"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/c_f6f7fb"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_15"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/order_info_details_ps_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="备注"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/order_info_details_ps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/order_info_details_ps_tv"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_38"
                android:textColor="@color/c_a6a6a6"
                android:textColorHint="@color/c_d9d9d9"
                app:layout_constraintTop_toTopOf="parent"/>
        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/c_f6f7fb"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/order_info_details_total_amount_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/order_info_details_total_amount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="汇总金额"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp_14"
                android:paddingTop="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_15"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/order_info_details_total_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/order_info_details_total_amount_tv"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_38"
                android:textColor="@color/c_333333"
                android:textColorHint="@color/c_d9d9d9"
                android:singleLine="true"
                android:lines="1"
                android:ellipsize="end"
                android:paddingTop="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_15"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>