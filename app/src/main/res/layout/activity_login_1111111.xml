<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_marginTop="@dimen/dp_76">

            <ImageView
                android:id="@+id/login_logo"
                android:layout_width="@dimen/dp_107"
                android:layout_height="@dimen/dp_30"
                android:src="#f00"/>

            <TextView
                android:id="@+id/login_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="企业登录"
                android:textSize="@dimen/sp_10"
                android:includeFontPadding="false"
                android:textColor="@color/c_333333"/>
        </LinearLayout>

        <jh.zkj.com.yf.Mview.slidingtab.SlidingTabLayout
            android:id="@+id/login_sliding_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_40"
            app:tl_indicator_color="@color/c_6fb1fc"
            app:tl_indicator_height="1.5dp"
            app:tl_indicator_width_equal_title="true"
            app:tl_tab_space_equal="true"
            app:tl_textSelectColor="@color/c_6fb1fc"
            app:tl_textUnselectColor="@color/c_333333"
            app:tl_textsize="16sp"
            app:tl_underline_color="@color/white"
            app:tl_underline_height="1dp"
            android:background="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/c_f2f2f2"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/login_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>




</RelativeLayout>