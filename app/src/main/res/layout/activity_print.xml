<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <jh.zkj.com.yf.Mview.TitleLayout
        app:rightText="设置"
        app:rightTextSize="@dimen/sp_12"
        app:rightMargin="@dimen/dp_15"
        android:id="@+id/print_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white"
        app:centerText="打印"
        app:centerTextColor="@color/c_333333"
        app:centerTextSize="@dimen/sp_17"
        app:leftImageBg="@mipmap/back_arrow"
        app:leftImageHeightSize="@dimen/dp_20"
        app:leftImageWidthSize="@dimen/dp_12"
        app:leftMargin="@dimen/dp_16" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/white">

        <TextView
            android:id="@+id/print_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:text="打印机"
            android:includeFontPadding="false"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/print_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_26"
            android:text="请连接打印机"
            android:includeFontPadding="false"
            android:textColor="@color/c_d9d9d9"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@mipmap/right_lab" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/print_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentBottom="true"
            android:includeFontPadding="false"
            android:background="@color/c_6fb1fc"
            android:text="打印"
            android:gravity="center"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/print_style"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="打印样式预览"
            android:textColor="@color/c_a6a6a6"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_12" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/print_sure"
            android:layout_below="@id/print_style"
            android:layout_marginTop="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_15"
                android:padding="@dimen/dp_20"
                android:background="@drawable/shape_solid_ffffff_radius_4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/print_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="店名"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/c_333333"/>

                <TextView
                    android:id="@+id/print_serial_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单据号：xxxxxx"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/dp_26"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/c_333333"/>

                <TextView
                    android:id="@+id/print_create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单据日期：xxxxxx"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/c_333333" />

                <TextView
                    android:id="@+id/print_client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客户名称：xxxxxx"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/c_333333" />

                <TextView
                    android:id="@+id/print_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话：xxxxxx"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/c_333333" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="------------------------- 零售 -------------------------"
                    android:layout_marginTop="@dimen/dp_16"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/sp_12"
                    android:singleLine="true"
                    android:textColor="@color/c_333333" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom">

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="商品名称"
                            android:includeFontPadding="false"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/c_333333" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="商品编号"
                            android:layout_marginTop="@dimen/dp_10"
                            android:includeFontPadding="false"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/c_333333" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="数量"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/c_333333"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="单价"
                        android:gravity="right"
                        android:paddingRight="@dimen/dp_10"
                        android:includeFontPadding="false"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/c_333333" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="金额"
                        android:gravity="right"
                        android:includeFontPadding="false"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/c_333333" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/print_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/c_333333"
                    android:layout_marginTop="@dimen/dp_16"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_8">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="合计"
                        android:includeFontPadding="false"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/c_333333" />

                    <TextView
                        android:id="@+id/print_total_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/c_333333" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:gravity="right"
                        android:paddingRight="@dimen/dp_10"
                        android:includeFontPadding="false"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/c_333333" />

                    <TextView
                        android:id="@+id/print_total_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0.00"
                        android:gravity="right"
                        android:includeFontPadding="false"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/c_333333" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/c_333333"
                    android:layout_marginTop="@dimen/dp_8"/>

                <LinearLayout
                    android:id="@+id/print_harvest_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

                <TextView
                    android:id="@+id/print_salesman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="业务员："
                    android:includeFontPadding="false"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/c_333333"
                    android:layout_marginTop="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/print_create_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="制单人："
                    android:includeFontPadding="false"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/c_333333"
                    android:layout_marginTop="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/print_remake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注："
                    android:includeFontPadding="false"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/c_333333"
                    android:layout_marginTop="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/print_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="打印时间：:"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/c_333333"
                    android:layout_marginTop="@dimen/dp_10"/>

                <TextView
                    android:id="@+id/print_bottom_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="骏杭科技提供技术支持"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/c_333333"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp_20"/>

            </LinearLayout>

        </ScrollView>
    </RelativeLayout>
</LinearLayout>