<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Insurance.InsureConfirmActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/c_f6f7fb">

    <jh.zkj.com.yf.Mview.TitleLayout
        android:id="@+id/insure_confirm_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white"
        app:centerText="投保确认"
        app:centerTextSize="@dimen/sp_16"
        app:leftImageBg="@mipmap/back_arrow"
        app:leftImageHeightSize="@dimen/dp_20"
        app:leftImageWidthSize="@dimen/dp_12"
        app:leftMargin="@dimen/dp_16"
        app:rightMargin="@dimen/dp_16"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/insure_confirm_title"
        android:layout_above="@id/insure_confirm_bottom_layout">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/insure_confirm_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="被保人姓名"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_14"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="xxx"
                    android:textColor="@color/c_666666"
                    android:textSize="@dimen/sp_14"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/dp_16"
                    android:layout_centerVertical="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/c_f6f7fb"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="证件类型"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_14"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="身份证"
                    android:textColor="@color/c_666666"
                    android:textSize="@dimen/sp_14"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/dp_16"
                    android:layout_centerVertical="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/c_f6f7fb"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="证件号码"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_14"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="3343235665438907"
                    android:textColor="@color/c_666666"
                    android:textSize="@dimen/sp_14"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/dp_16"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="手机号码"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_14"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="124 5553 2234"
                    android:textColor="@color/c_666666"
                    android:textSize="@dimen/sp_14"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/dp_16"
                    android:layout_centerVertical="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/c_f6f7fb"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="购买机型"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_14"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="苹果iPhone8"
                    android:textColor="@color/c_666666"
                    android:textSize="@dimen/sp_14"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/dp_16"
                    android:layout_centerVertical="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/c_f6f7fb"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="IMEI号/识别号"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_14"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="IE1242423523"
                    android:textColor="@color/c_666666"
                    android:textSize="@dimen/sp_14"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/dp_16"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/insure_confirm_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="合计： ￥0.00"
            android:layout_centerVertical="true"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_14"
            android:layout_marginRight="@dimen/dp_6"/>


        <TextView
            android:id="@+id/select_insurance_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:includeFontPadding="false"
            android:text="付款"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:background="@color/c_4987ff"
            android:paddingLeft="@dimen/dp_52"
            android:paddingRight="@dimen/dp_52"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</RelativeLayout>