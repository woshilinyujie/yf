<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--照片选择进出动画-->
    <style name="Photo_Popup">
        <item name="android:windowEnterAnimation">@anim/photo_pop_in</item>
        <item name="android:windowExitAnimation">@anim/photo_pop_out</item>
    </style>

    <!-- popupwindow打开动画 -->
    <style name="default_popup_animation">
        <item name="android:windowEnterAnimation">@anim/popup_end_to_top</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <!--数据分析选择器-->
    <style name="select_Popup">
        <item name="android:windowEnterAnimation">@anim/select_pop_in</item>
        <item name="android:windowExitAnimation">@anim/select_pop_out</item>
    </style>

    <!--LOADING DIALOG-->
    <style name="Loading_Dialog" parent="android:Theme.Dialog">
        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 是否没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!--activity不变暗-->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 是否背景模糊 -->
        <!--<item name="android:backgroundDimEnabled">true</item>-->
        <!-- 设置背景模糊的透明度-->
        <!--<item name="android:backgroundDimAmount">0.3</item>-->
    </style>
</resources>
